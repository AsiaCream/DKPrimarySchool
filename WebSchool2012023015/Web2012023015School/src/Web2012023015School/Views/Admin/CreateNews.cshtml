 <form role="form" asp-action="CreateNews" asp-controller="Admin" method="post">
        <div class="form-group">
            <h2>添加新闻</h2>
            <table class="table">
                <tr>
                    <th>新闻标题</th>
                    <td><input class="form-control" type="text" name="Title" /></td>
                </tr>
                <tr>
                    <th>新闻内容</th>
                    <td>
                        <script id="editor" type="text/plain" name="Content" style="width:1000px;">
                        </script>
                    </td>
                </tr>
                <tr>
                    <th>新闻来源</th>
                    <td>
                        <select name="Source">
                            <option>原创</option>
                            <option>校园</option>
                            <option>教师</option>
                            <option>党支部</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <th>优先级</th>
                    <td><input class="form-control" type="text" name="Priority" /></td>
                </tr>
                <tr>
                    <td><input class="form-control" type="hidden" name="DataTime" value="@DateTime.Now" /></td>
                </tr>
                
            </table>
            <p>
                <input class="btn inverse" type="submit" value="提交" />
                <a asp-action="DetailsNews" asp-controller="Admin">取消</a>
            </p>
        </div>
    </form>
    <script src="~/scripts/jquery-2.1.1.js"></script>
    <script type="text/javascript" src="~/scripts/ueditor.config.js"></script>
    <script type="text/javascript" src="~/scripts/ueditor.all.js"></script>
    <script type="text/javascript" src="~/scripts/zh-cn.js"></script>
    <link rel="stylesheet" href="~/styles/default/css/ueditor.css" />
    <script type="text/javascript">
        var ue = UE.getEditor('editor');
    </script>