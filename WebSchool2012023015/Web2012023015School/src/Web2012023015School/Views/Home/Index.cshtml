    <script src="~/scripts/bootstrap.min.js"></script>
    <script src="~/scripts/ie-emulation-modes-warning.js"></script>
    <script src="~/scripts/holder.min.js"></script>
    <script src="~/scripts/ie10-viewport-bug-workaround.js"></script>

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Custom styles for this template -->
    <link href="~/styles/carousel.css" rel="stylesheet">
    <style type="text/css">
        .headbanner{
            width:100%;
            height:100px;
            background:url("../images/hb.jpg") top no-repeat;
        }
    </style>
</head>
<body>
        <div class="headbanner"></div>
            <nav class="navbar navbar-default">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="#" title="达开实验小学"></a>
                    </div>
                    <div id="navbar" class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li><a asp-action="Index" asp-controller="Home">学&nbsp;校&nbsp;首&nbsp;页</a></li>
                            <li><a asp-action="Details" asp-controller="Home">学&nbsp;校&nbsp;概&nbsp;况</a></li>
                            <li><a asp-action="Photos" asp-controller="Page">校&nbsp;园&nbsp;风&nbsp;光</a></li>
                            <li><a asp-action="News" asp-controller="Page">校&nbsp;园&nbsp;新&nbsp;闻</a></li>
                            <li><a asp-action="Article" asp-controller="Page">师&nbsp;生&nbsp;文&nbsp;章</a></li>
                            <li><a asp-action="RecruitStudents" asp-controller="Page">招&nbsp;生&nbsp;信&nbsp;息</a></li>
                            <li><a asp-action="Inform" asp-controller="Page">通&nbsp;知&nbsp;公&nbsp;告</a></li>
                            <li><a asp-action="Inform" asp-controller="Page">校&nbsp;长&nbsp;信&nbsp;箱</a></li>
                            <li><a asp-action="Inform" asp-controller="Page">课&nbsp;余&nbsp;活&nbsp;动</a></li>
                            <li><a asp-action="Message" asp-controller="Page">留&nbsp;&nbsp;言&nbsp;&nbsp;版</a></li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">友&nbsp;情&nbsp;链&nbsp;接 <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a href="http://ggdksy.ggedu.gov.cn" target="_blank">达开初中</a></li>
                                    <li><a href="http://ggdkgz.ggedu.gov.cn" target="_blank">达开高中</a></li>
                                    <li role="separator" class="divider"></li>
                                    <li class="dropdown-header">著名高校</li>
                                    <li><a href="http://www.tsinghua.edu.cn" target="_blank">清华大学</a></li>
                                    <li><a href="http://www.pku.edu.cn" target="_blank">北京大学</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
    <div class="container">
        <div class="col-md-3">
            <div class="panel panel-default">
                <div class="panel-heading text-center" style="background-color:rgb(140,220,120)">
                    <a href="#" style="color:rgb(0,157,0);">校园一角</a>
                </div>
                <div class="thumbnail">
                    <a href="#"><img src="~/images/door.jpg" /></a>
                </div>
            </div>

        </div>
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading text-center" style="background-color:rgb(140,220,120);">
                    <a asp-action="News" asp-controller="Page" style="color:rgb(0,157,0);">最新新闻</a>
                </div>
                @foreach (News x in ViewBag.news)
                {
                    <div class="panel-body">
                        <a asp-action="News" asp-controller="Show" asp-route-id="@x.Id">@x.Title</a><small class="pull-right">@x.Datatime</small>
                    </div>
                }
            </div>
        </div>
        <div class="col-md-3">
            <div class="panel panel-default">
                <div class="panel-heading text-center" style="background-color:rgb(140,220,120)">
                    <a asp-action="Inform" asp-controller="Page" style="color:rgb(0,157,0);">最新通知</a>
                </div>
                @foreach (Inform x in ViewBag.info)
                {
                    <div class="panel-body">
                        <a asp-action="News" asp-controller="Show" asp-route-id="@x.Id">@x.Title</a>
                    </div>
                }
            </div>
        </div>
    </div>
